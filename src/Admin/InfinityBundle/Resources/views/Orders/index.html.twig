{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Orders list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nbcf</th>
                <th>Paymentat</th>
                <th>Shippingby</th>
                <th>Date</th>
                <th>Dateprevu</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Observation</th>
                <th>Dateproforma</th>
                <th>Pathfile</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('orders_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nbcf }}</td>
                <td>{{ entity.paymentAt }}</td>
                <td>{{ entity.shippingBy }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datePrevu %}{{ entity.datePrevu|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.quantity }}</td>
                <td>{{ entity.observation }}</td>
                <td>{% if entity.dateProforma %}{{ entity.dateProforma|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.pathFile }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('orders_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('orders_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('orders_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
