{% extends '::admin.html.twig' %}

{% block body %}

    <form method="post" enctype="multipart/form-data" action="{{ path('coa_new') }}">
        <div>
            <!--  les informations de la COA -->
            <br/>
            <table>
                <!-- Batch Num && Manufacturing Date -->
                <tr>
                    <td>{{ form_label(form.nbcf, 'Batch N째') }}</td>
                    <td>{{ form_widget(form.batchNum, { 'attr': {'class': 'form-control'} }) }}</td>
                    <td>{{ form_label(form.mfg, 'Manufacturing Date') }}</td>
                    <td><input type="date" name="mfg"  class="form-control"></td>
                </tr>
                <!-- Batch size && Retest Date -->
                <tr>
                    <td>{{ form_label(form.batchSize, 'Batch size') }}</td>
                    <td>{{ form_widget(form.batchSize, { 'attr': {'class': 'form-control'} }) }}</td>
                    <td>{{ form_label(form.retest, 'Retest Date') }}</td>
                    <td><input type="date" name="retest" class="form-control"></td>
                </tr>
                <!-- A.R.N째 && Path file -->
                <tr>
                    <td>{{ form_label(form.arn, 'A.R.N째', { 'attr': {'class': 'form-control'} }) }}</td>
                    <td>{{ form_widget(form.arn, { 'attr': {'class': 'form-control'} }) }}</td>
                    <td>{{ form_label(form.pathFile, 'File Path째') }}</td>
                    <td>
                        <input type="file" name="img"  class="form-control">
                    </td>

                </tr>
                <!-- Raw Materials -->
                <tr>
                    <td>{{ form_label(form.dci, 'Raw Materials') }}</td>
                    <td>{{ form_widget(form.dci, { 'attr': {'class': 'dciMat'} }) }}</td>
                    <td></td>
                    <td></td>
                </tr>
                <!-- Provider -->
                <tr>
                    <td>{{ form_label(form.fournisseur, 'Provider') }}</td>
                    <td>{{ form_widget(form.fournisseur, { 'attr': {'class': 'form-control'} }) }}</td>
                    <td></td>
                    <td></td>
                </tr>
                <!-- Norme -->
                <tr>
                    <td>{{ form_label(form.norme, 'Norme') }}</td>
                    <td>{{ form_widget(form.norme, { 'attr': {'class': 'form-control'} }) }}</td>
                    <td></td>
                    <td></td>
                </tr>
            </table>
            <!--  les Details de la COA -->
            <br />
            <p>
            <table border="1" cellspacing="5px" cellpadding="5px" class="table table-striped table-bordered table-hover dataTable no-footer">
                <!-- La structure de la table de details -->
                <tr>
                    <th scope="col" rowspan="2">TESTS</th>
                    <th scope="col" colspan="4">SPECIFICATION</th>
                    <th scope="col" rowspan="2">RESULTS</th>
                    <th scope="col" colspan="2" rowspan="2">ACTIONS</th>
                </tr>
                <tr>
                    <td>USP</td>
                    <td>EP</td>
                    <td>AFMA</td>
                    <td>IN HOUSE</td>
                </tr>
                <!-- Les Informations -->
                <tr id="1" style="display:none;">
                    <!-- La liste de touts les Test -->
                    <td>

                        {{ form_widget(form.coaDetails.vars.prototype.test, { 'attr': {'class': 'ListTests'} } ) }}
                    </td>
                    <!-- USP -->
                    <td style="max-width: 200px;" id="usp">
                    </td>
                    <!-- EP -->
                    <td style="max-width: 200px;" id="ep">
                    </td>
                    <!-- CUSTUM SPEC -->
                    <td style="max-width: 200px;" id="custum">
                    </td>
                    <!-- IN HOUSE -->
                    <td style="max-width: 200px;" id="inhouse">
                    </td>
                    <!-- La valeur de la resultat recolter l'hors du test -->
                    <td>
                        {{ form_widget(form.coaDetails.vars.prototype.value, { 'attr': {'class': 'form-control'} } ) }}
                    </td>
                    <td>
                        <button type="button" class="btn btn-warning btn-circle">
                            <i class="fa fa-times"></i>
                        </button>
                    </td>
                </tr>
            </table>
            </p>
            <p style="align:right">
            <div class="btn-group" role="group" aria-label="..." align="center">
                <button type="button" id="form_coaDetails_btn" class="btn btn-outline btn-primary">New Test</button>
                {{ form_widget(form._token) }}
                <button type="submit" class="btn btn-outline btn-primary">Submit</button>

            </div>
    </form>

{% endblock %}