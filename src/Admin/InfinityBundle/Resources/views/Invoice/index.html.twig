{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Invoice list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Datepayment</th>
                <th>Dpcb</th>
                <th>Datesortie</th>
                <th>Airwaybill</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('invoice_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.datePayment %}{{ entity.datePayment|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dpcb %}{{ entity.dpcb|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateSortie %}{{ entity.dateSortie|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.airwaybill }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('invoice_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('invoice_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('invoice_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
